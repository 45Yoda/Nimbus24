@model Nimbus24.Cliente

@{

    ViewData["Title"] = "Bem Vindo!";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<body style="background-color: beige; font-family: Verdana, Arial;">
    <link href="~/Content/Login.css" rel="stylesheet" type="text/css" />

   
    <div id="Login" class="tabcontent" align="center">
        <form action="" method="post" align="middle">
            <img src="~/Images/reeeeee.png" alt="Avatar" style="width:30%;"><br />
            <br />
            <label for="mail"><b>E-Mail</b></label>
            <input type="text" placeholder="Enter mail" name="mail" required align="middle"> <br />
            <br/>
            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="psw" required><br>
            <br />

            <button type="submit">Login</button>
        </form>
    </div>
   
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>